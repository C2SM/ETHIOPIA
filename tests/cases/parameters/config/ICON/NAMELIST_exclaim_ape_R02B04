 albedo_fixed                =                        0.2         ! DL: Discuss value!
 irad_o3                     =                         0         ! ozone climatology 7: GEMS ozone climatology !DL: Want 4 for Aquaplanet
 irad_aero                   =                         2         ! aerosol climatology 0: no aerosols 2: global constant
 irad_h2o                    =                         1
 irad_co2                    =                         0
